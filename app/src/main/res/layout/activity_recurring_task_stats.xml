<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsRecurringTaskActivity">

    <AutoCompleteTextView
        android:id="@+id/searchTasks"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/roundedcontainer"
        android:hint="Enter your task here"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/timeTakenChart"
        android:name="sg.edu.np.mad.madassignment1.StatsRecurringTaskFragment"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTasks"
        tools:layout="@layout/fragment_stats_recurring_task" />

</androidx.constraintlayout.widget.ConstraintLayout>